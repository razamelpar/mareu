<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtReunionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="nom de reunion" />

    <TextView
        android:id="@+id/txtReunionSalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:padding="10dp"
        android:text="Salle x" />
    <TextView
        android:id="@+id/txtReunionDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:padding="10dp"
        android:text="date reunion" />
    <TextView
        android:id="@+id/txtReunionSujet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:padding="10dp"
        android:text="sujet reunion" />
    <TextView
        android:id="@+id/txtReunionParticipants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:padding="10dp"
        android:text="reunion participants" />

</LinearLayout>